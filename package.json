{
  "name": "define-accessor2",
  "version": "0.5.0",
  "description": "An extended version of Object.defineProperty function. Define feature-rich properties for your objects",
  "main": "./src/define-accessor2.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "nodemon --ignore docs/ --exec \"npm test && npm run docs\"",
    "docs": "jsdoc2md -t jsdoc2md/README.hbs src/define-accessor2.js > README.md",
    "docs2": "jsdoc2md src/define-accessor2.js > README.md",
    "jsdoc": "jsdoc src/define-accessor2.js",
    "prepublishOnly": "npm run test && npm docs",
    "postversion": "git push && git push --tags",
    "lint": "eslint src",
    "codacy-coverage": "cat ./coverage/lcov.info | codacy-coverage",
    "test": "nyc --reporter=html --reporter=text mocha test/ --exit --timeout=3000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": "https://github.com/DigitalBrainJS/define-accessor2.git",
  "bugs": {
    "url": "https://github.com/DigitalBrainJS/define-accessor2/issues"
  },
  "keywords": [
    "defineProperty",
    "define",
    "accessor",
    "property",
    "prop",
    "lazy",
    "validator",
    "check",
    "assert",
    "validation",
    "test",
    "joi",
    "get",
    "set",
    "chains",
    "cached",
    "object",
    "private"
  ],
  "author": "Dmitriy Mozgovoy",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "expect": "^23.6.0",
    "jsdoc-to-markdown": "^5.0.3",
    "mocha": "^5.2.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "@hapi/joi": "^17.1.0"
  },
  "peerDependencies": {
    "@hapi/joi": "^17.1.0"
  }
}
